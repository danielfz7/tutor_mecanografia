Tendr치 que llevar la cuenta de cu치ntas pulsaciones de teclas ha escrito correctamente el usuario, y cu치ntas escribi칩 en forma incorrecta.

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class PangramasTeclado {
    public static void main(String[] args) {
        String fileName = "pangramas.txt";
        int aciertos = 0;
        int errores = 0;

        try (BufferedReader reader = new BufferedReader(new FileReader(fileName))) {
            String line;
            while ((line = reader.readLine()) != null) {
                Scanner scanner = new Scanner(System.in);
                System.out.println("Ingrese la palabra pangrama: ");
                String userInput = scanner.nextLine();

                if (userInput.equalsIgnoreCase(line)) {
                    aciertos++;
                } else {
                    errores++;
                }
            }

            System.out.println("Resultados:");
            System.out.println("Aciertos: " + aciertos);
            System.out.println("Errores: " + errores);

        } catch (IOException e) {
            System.out.println("Error: " + e.getMessage());
        }
    }
}
